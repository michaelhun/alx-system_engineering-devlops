#!/usr/bin/env bash
# Bash script that configures a new Ubuntu machine
# Configure HAproxy to send traffic to web-01 & web-02
# Use roundrobin algorithm for distribution
sudo apt-get  update
sudo apt-get -y install haproxy
config_string=\
"
backend web-servers
        balance roundrobin
        server 14981-web-01 54.237.38.156:80 check
        server 14981-web-02 34.207.188.214:80 check
frontend haproxy_balancer
         bind *:80
         mode http
         default_backend server_backend
"
echo "$config_string" | sudo tee -a /etc/haproxy/haproxy.cfg
echo 'ENABLED=1' | sudo tee -a /etc/default/haproxy
sudo service haproxy restart
